{
    "name":"Productify",
    "version":"1.0",
    "manifest_version":2,
    "description":"Productify - control and diversify your dependence on the web",
    "browser_action": {
        "default_popup":"templates/front_page.html"
    },
    "permissions": [
        "contextMenus","tts","storage","notifications","webRequest","webRequestBlocking",
        "storage","notifications","webRequest","webRequestBlocking","<all_urls>"
    ],
    "options_page":"templates/options.html",
    "content_scripts": [
        {
            "matches":["<all_urls>"],
            "js":["js/jquery.js","js/content_scripts.js"]
        }
    ],
    "background":{
        "scripts":["js/background.js"],
        "persistent":true
    }
}